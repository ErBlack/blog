<section class="preview">
    {% if post.data.images.0 %}
    <a href="{{post.url}}" class="preview__cover">{% cover post.data.images.0, 'preview__image' %}</a>
    {% endif %}
    <h2 class="preview__title" title="{{post.data.title | escape}}"><a href="{{post.url}}">{{post.data.title | escape}}</a></h2>
    <div class="preview__content">{{post.content}}</div>
</section>
